<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fragment_home_page_subjects_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/fragment_home_page_subjects_frame_scrollAll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                >

                <RelativeLayout
                    android:id="@+id/fragment_home_page_subjects_frame_relative"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/fragment_home_page_subjects_frame_text_texti"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/texti"
                        android:textColor="@color/gray_700"
                        android:layout_alignParentRight="true"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_marginRight="8dp"
                        />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/fragment_home_page_subjects_frame_recyclerTexti"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fragment_home_page_subjects_frame_text_texti"
                        android:layout_centerInParent="true"
                        android:padding="2dp"
                        ></android.support.v7.widget.RecyclerView>

                    <TextView
                        android:id="@+id/fragment_home_page_subjects_frame_text_audioi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/audioi"
                        android:textColor="@color/gray_700"
                        android:layout_alignParentRight="true"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:layout_marginRight="8dp"
                        android:layout_below="@+id/fragment_home_page_subjects_frame_recyclerTexti"
                        />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/fragment_home_page_subjects_frame_recyclerAudioi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fragment_home_page_subjects_frame_text_audioi"
                        android:layout_centerInParent="true"
                        android:padding="2dp"
                        ></android.support.v7.widget.RecyclerView>

                    <TextView
                        android:id="@+id/fragment_home_page_subjects_frame_text_videoi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/videoi"
                        android:textColor="@color/gray_700"
                        android:layout_alignParentRight="true"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:layout_marginRight="8dp"
                        android:layout_below="@+id/fragment_home_page_subjects_frame_recyclerAudioi"
                        />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/fragment_home_page_subjects_frame_recyclerVideoi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fragment_home_page_subjects_frame_text_videoi"
                        android:layout_centerInParent="true"
                        android:padding="2dp"
                        ></android.support.v7.widget.RecyclerView>
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>