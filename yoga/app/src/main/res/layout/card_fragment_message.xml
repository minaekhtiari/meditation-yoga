<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:padding="32dp"
    >
        <TextView
            android:id="@+id/card_fragment_message_textSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="علائم بلوغ را در دخترم نمی بینم"
            android:layout_alignParentStart="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            >
            <TextView
                android:id="@+id/fragment_home_page_sexualHealth_recycler_conent_txtDateDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21"
                android:textColor="@color/gray_300"
                android:layout_marginRight="2dp"
                android:textSize="10sp"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:id="@+id/fragment_home_page_sexualHealth_recycler_conent_txtDateMounth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اردیبهشت"
                android:textColor="@color/gray_300"
                android:layout_marginRight="2dp"
                android:textSize="10sp"
                android:layout_toLeftOf="@+id/fragment_home_page_sexualHealth_recycler_conent_txtDateDay"
                />
            <TextView
                android:id="@+id/fragment_home_page_sexualHealth_recycler_conent_txtDateYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1395"
                android:textColor="@color/gray_300"
                android:layout_marginRight="2dp"
                android:textSize="10sp"
                android:layout_toLeftOf="@+id/fragment_home_page_sexualHealth_recycler_conent_txtDateMounth"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/card_fragment_message_image_personLogo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            />
        <TextView
            android:id="@+id/card_fragment_message_image_personName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="دکتر سارا کاظمی"
            android:textColor="@color/gray_700"
            android:layout_alignRight="@+id/card_fragment_message_image_personLogo"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:paddingRight="8dp"
            android:layout_marginRight="32dp"
            />
        <TextView
            android:id="@+id/card_fragment_message_image_personProficiency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="متخصص زنان و رفتار های جنسی"
            android:textColor="@color/gray_700"
            android:layout_alignRight="@+id/card_fragment_message_image_personLogo"
            android:layout_alignParentBottom="true"
            android:paddingRight="8dp"
            android:layout_marginRight="32dp"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:tint="@color/colorAccent"
            android:layout_alignParentEnd="true"
            />
</RelativeLayout>