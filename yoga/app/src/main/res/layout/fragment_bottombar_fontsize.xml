<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@drawable/bg_white_top_shadow"
    android:paddingTop="1dp"
    >

    <RelativeLayout
        android:id="@+id/fragment_bottombar_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >
        <ImageView
            android:id="@+id/fragment_bottombar_fontSize_image_close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:tint="@color/red"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center|end"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/fragment_bottombar_fontSize_image_close"
            android:layout_marginLeft="32dp"
            >

            <ImageView
                android:id="@+id/fragment_bottombar_fontSize_image_fontSmall"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                />

            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/fragment_bottombar_fontSize_seekbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:max="5"
                />

            <ImageView
                android:id="@+id/fragment_bottombar_fontSize_image_fontLarg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
