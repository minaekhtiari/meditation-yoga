<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagerTour"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>


    <net.alexandroid.utils.indicators.IndicatorsView
        android:id="@+id/indicatorsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:indicatorSize="10dp"
        app:paddingBetweenIndicators="16dp"
        app:selectedDrawable="@drawable/dotpurple"
        app:indicatorSelectedSize="14dp"
        app:unSelectedDrawable="@drawable/dotnotwhite"
        app:numberOfIndicators="2"
        app:selectedIndicator="0"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        />


</RelativeLayout>