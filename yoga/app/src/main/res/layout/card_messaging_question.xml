<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_messaging_question_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="2dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_messaging_question_relativeBack"
        android:padding="8dp"
        >
        <TextView
            android:id="@+id/card_messaging_question_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:lineSpacingExtra="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="start|center"
            android:textStyle="bold"
            android:padding="8dp"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView2"
            android:layout_toLeftOf="@+id/card_messaging_question_subject"
            android:layout_marginTop="8dp"
            />

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            >
            <ImageView
                android:id="@+id/card_messaging_question_image_Text"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="invisible"
                android:layout_centerInParent="true"
                />
            <ImageView
                android:id="@+id/card_messaging_question_image_Audio"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/audio_message"
                android:visibility="invisible"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/card_messaging_question_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_500"
            android:textSize="10sp"
            android:gravity="start"
            android:layout_below="@+id/relativeCenter"
            android:layout_marginTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="@color/gray_500"
            android:layout_below="@+id/relativeCenter"
            android:layout_marginTop="8dp"
            />

        <ImageView
            android:id="@+id/card_messaging_question_image_hasAnswer"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"
            android:layout_below="@+id/relativeCenter"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            />

        <RelativeLayout
            android:id="@+id/relativeCenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/card_messaging_question_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_500"
                    android:textSize="12sp"
                    android:lineSpacingExtra="10dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:gravity="start|center"
                    android:paddingRight="24dp"
                    android:paddingLeft="16dp"
                    android:layout_centerInParent="true"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    />
            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>