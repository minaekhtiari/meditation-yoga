<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@drawable/bg_red_bottom_shadow"
    android:padding="8dp"
    >
    <TextView
        android:id="@+id/toolbar_all_frameTitle_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="2dp"
        android:text="تیتر تستی"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/toolbar_all_imageMessage_relative"
        android:layout_toLeftOf="@+id/toolbar_all_imageBack_relative"
        android:textSize="12sp"
        />

    <RelativeLayout
        android:id="@+id/toolbar_all_imageBack_relative"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/toolbar_all_imageBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:tint="@color/white"
            />
    </RelativeLayout>
</RelativeLayout>