<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_200">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:background="@color/white"
        >
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"

            >
            <EditText
                android:id="@+id/fragment_profile_insertion_editName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="start|center"
                android:hint="@string/hint_nameFamily"
                android:inputType="text"
                android:maxLength="20"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:background="@color/white"
                >
            </EditText>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_200"/>
            <EditText
                android:id="@+id/fragment_profile_insertion_editWeight"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="start|center"
                android:hint="@string/hint_weight_kilo"
                android:inputType="phone"
                android:maxLength="3"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:background="@color/white"
                android:layout_below="@+id/fragment_profile_insertion_editWeight"
                >
            </EditText>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_200"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_sex"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_gravity="end"
                    >
                    <LinearLayout
                        android:id="@+id/fragment_register_linear_male"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="6dp"
                        android:gravity="center"
                        >

                        <ImageView
                            android:id="@+id/fragment_register_image_male"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/male_gray"
                            android:layout_gravity="center"
                            />

                        <TextView
                            android:id="@+id/fragment_register_text_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/man"
                            android:textSize="9sp"
                            android:textColor="@color/gray"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragment_register_linear_female"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:gravity="center"

                        >
                        <ImageView
                            android:id="@+id/fragment_register_image_female"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/female_red"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:id="@+id/fragment_register_text_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/woman"
                            android:textSize="9sp"
                            android:textColor="@color/red"
                            />
                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_below="@+id/cardview"
        android:layout_marginTop="8dp"
        android:background="@drawable/gradiant"
        >
        <Button
            android:id="@+id/fragment_register_Btn_register"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@drawable/gradiant"
            android:text="@string/hint_addAcount"
            android:textColor="@color/white"
            android:textSize="12sp"
            >
            <requestFocus/>
        </Button>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/gradiant2"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:visibility="gone"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/person_woman"
        app:border_color="@color/white"
        app:border_width="1dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/cardview"
        android:layout_marginBottom="32dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:text="پروفایل"
        android:textColor="@color/white"
        android:layout_marginBottom="32dp"
        android:layout_above="@+id/profile_image"
        />

</RelativeLayout>
