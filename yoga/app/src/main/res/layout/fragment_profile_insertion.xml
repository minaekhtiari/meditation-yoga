<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_200">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:background="@color/white"
        >
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"

            >
            <EditText
                android:id="@+id/fragment_profile_insertion_editName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:hint="@string/hint_nameFamily"
                android:inputType="text"
                android:maxLength="20"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:background="@color/white"
                >
            </EditText>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_200"/>
            <!--<EditText-->
                <!--android:id="@+id/fragment_profile_insertion_editWeight"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="50dp"-->
                <!--android:gravity="center"-->
                <!--android:hint="@string/hint_weight_kilo"-->
                <!--android:inputType="number"-->
                <!--android:maxLength="3"-->
                <!--android:paddingLeft="8dp"-->
                <!--android:paddingRight="8dp"-->
                <!--android:paddingTop="8dp"-->
                <!--android:textColor="@color/black"-->
                <!--android:textSize="14sp"-->
                <!--android:background="@color/white"-->
                <!--android:layout_below="@+id/fragment_profile_insertion_editName"-->
                <!--&gt;-->
            <!--</EditText>-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_200"/>
            <EditText
                android:id="@+id/fragment_profile_insertion_editSex"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:hint="@string/hint_sex"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:background="@color/white"
                android:layout_below="@+id/fragment_profile_insertion_editWeight"
                >
            </EditText>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_below="@+id/cardview"
        android:layout_marginTop="8dp"
        android:background="@drawable/gradiant"
        >
        <Button
            android:id="@+id/fragment_register_Btn_register"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@drawable/gradiant"
            android:text="@string/hint_addAcount"
            android:textColor="@color/white"
            android:textSize="12sp"
            />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/gradiant2"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:visibility="gone"
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/alp"
        app:border_color="@color/white"
        app:border_width="1dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/cardview"
        android:layout_marginBottom="32dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:text="پروفایل"
        android:textColor="@color/white"
        android:layout_marginBottom="32dp"
        android:layout_above="@+id/profile_image"
        />

</RelativeLayout>
