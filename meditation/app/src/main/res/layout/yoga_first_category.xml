<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_menu_drawerLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="apps.hillavas.com.meditation.MenuActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/toolbar_home"
            android:id="@+id/fragment_main_toolbar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/fragment_main_toolbar"
            android:background="@drawable/gradiant3"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <RelativeLayout
                    android:id="@+id/yoga_first_category_relative1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/image_menu1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="46dp"
                        android:src="@drawable/menu5" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="حرکات بدنی"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_marginTop="8dp"
                        android:layout_below="@+id/image_menu1"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_200"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/yoga_first_category_relative2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/image_menu2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/menu6"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="16dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="آمادگی"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_marginTop="8dp"
                        android:layout_below="@+id/image_menu2"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_200"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:id="@+id/yoga_first_category_relative3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/image_menu3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/menu3"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="16dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="پاکسازی"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_marginTop="8dp"
                        android:layout_below="@+id/image_menu3"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_200"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/yoga_first_category_relative4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/image_menu4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/menu4"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="16dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="آسانا"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_marginTop="8dp"
                        android:layout_below="@+id/image_menu4"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_200"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:id="@+id/yoga_first_category_relative5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/image_menu5"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/menu2"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="16dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="سیکل"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_marginTop="8dp"
                        android:layout_below="@+id/image_menu5"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/yoga_first_category_relative6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/image_menu6"
                        android:layout_width="100dp"
                        android:layout_height="90dp"
                        android:src="@drawable/menu1"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="16dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ذن"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_marginTop="8dp"
                        android:layout_below="@+id/image_menu6"
                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_200"
            android:layout_centerInParent="true"
            android:layout_below="@+id/fragment_main_toolbar"
            />
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/fragment_home_nav"
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        >
        <include layout="@layout/fragment_personal_info_service_off"/>
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>