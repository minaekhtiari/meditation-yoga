<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_fragment_commonQuestion_relativeBack"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    >


    <FrameLayout
        android:id="@+id/fraqment_faqOne_toolbarFrame"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fraqment_faqOne_toolbarFrame"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="16dp"
        >

        <TextView
            android:id="@+id/card_fragment_commonQuestion_Onequestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:lineSpacingExtra="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_200"
            android:layout_below="@+id/card_fragment_commonQuestion_Onequestion"
            android:layout_marginTop="8dp"
            />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/text"
            android:layout_marginBottom="2dp"
            >
            <classes.justifiers.JustifiedTextView
                android:id="@+id/card_fragment_commonQuestion_Oneanswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:lineSpacingExtra="8dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                />
        </ScrollView>


    </RelativeLayout>
</RelativeLayout>