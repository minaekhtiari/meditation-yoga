<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@drawable/bg_white_top_shadow"

    >

    <TextView
        android:id="@+id/textLine2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_200"
        android:layout_below="@+id/linear"
        />

    <LinearLayout
        android:id="@+id/fragment_bottombar_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        >

        <LinearLayout
            android:id="@+id/fragment_bottombar_linear_image_fontsize"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/fragment_bottombar_image_fontsize"
                android:layout_width="20dp"
                android:layout_height="20dp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/fragment_bottombar_linear_image_nightwhite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/fragment_bottombar_image_nightwhite"
                android:layout_width="20dp"
                android:layout_height="20dp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/fragment_bottombar_linear_image_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/fragment_bottombar_image_share"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/share"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/fragment_bottombar_linear_image_like"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/fragment_bottombar_image_like"
                android:layout_width="20dp"
                android:layout_height="20dp"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>