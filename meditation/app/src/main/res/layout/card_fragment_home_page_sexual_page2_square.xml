<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="127dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/fragment_home_page_sexualHealth_page2_square_imageBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            />
        <ImageView
            android:id="@+id/fragment_home_page_sexualHealth_page2_square_imageLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginBottom="72dp"
            android:layout_alignParentBottom="true"
            />

        <RelativeLayout
            android:id="@+id/fragment_home_page_sexualHealth_page2_square_relative"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:background="@color/black"
            >

            <TextView
                android:id="@+id/fragment_home_page_sexualHealth_recycler_square_txtDateDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                />
            <TextView
                android:id="@+id/fragment_home_page_sexualHealth_recycler_square_txtDateMounth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اردیبهشت"
                android:textColor="@color/white"
                android:layout_marginRight="2dp"
                android:textSize="8sp"
                android:layout_toLeftOf="@+id/fragment_home_page_sexualHealth_recycler_square_txtDateDay"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                />
            <TextView
                android:id="@+id/fragment_home_page_sexualHealth_recycler_square_txtDateYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1395"
                android:textColor="@color/white"
                android:layout_marginRight="2dp"
                android:textSize="8sp"
                android:layout_toLeftOf="@+id/fragment_home_page_sexualHealth_recycler_square_txtDateMounth"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                />

            <TextView
                android:id="@+id/fragment_home_page_sexualHealth_page2_square_txtText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="11dp"
                android:textSize="10sp"
                android:gravity="right"
                android:text="از هر فرصتی برای به آغوش کشیدن یکدیگر استفاده  کنید"
                android:lineSpacingExtra="5dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/white"
                />


        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>