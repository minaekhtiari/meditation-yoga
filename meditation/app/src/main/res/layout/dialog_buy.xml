<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardCornerRadius="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        >

    <TextView
        android:id="@+id/dialog_sendMessage_text_titr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="16dp"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:text="آیا از خرید این ویدئو مطمئن هستید ؟"
        />
    <TextView
        android:id="@+id/textLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_200"
        android:layout_below="@+id/dialog_sendMessage_text_titr"
        android:layout_marginBottom="16dp"
        />
    <Button
        android:id="@+id/dialog_buy_btn_accept"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textLine"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="بلی"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/curve_bg_green"
        />
        <Button
            android:id="@+id/dialog_buy_btn_cancel"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/textLine"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="خیر"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/curve_bg_blue"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>