<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_category_relativeBack"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="61dp"
    >
    <TextView
        android:id="@+id/card_category_text"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:gravity="center_vertical|start"
        android:background="@drawable/recycler_back_color"
        android:padding="8dp"
        />

    <ImageView
        android:id="@+id/card_category_image_tick"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:layout_toLeftOf="@+id/card_category_text"
        android:tint="@color/green"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_200"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        />

</RelativeLayout>
