<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="@color/greenGrass"
            android:layout_alignParentEnd="true"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/curve_bg_green"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            >

        <ImageView
            android:id="@+id/card_fragment_messaging_textMessage_answer_image_personLogo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            />
        <TextView
            android:id="@+id/card_fragment_messaging_textMessage_answer_text_personName"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="@color/gray_700"
            android:layout_alignRight="@+id/card_fragment_messaging_textMessage_answer_image_personLogo"
            android:paddingRight="8dp"
            android:layout_marginRight="32dp"
            android:textSize="12sp"
            android:gravity="start|center"
            />
        <RelativeLayout
            android:id="@+id/relativeAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_fragment_messaging_textMessage_answer_text_personName"
            >
                <TextView
                    android:id="@+id/card_fragment_messaging_textMessage_answer_text_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textSize="12sp"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginTop="16dp"
                    />
                <ImageView
                    android:id="@+id/card_fragment_messaging_textMessage_answer_image_amswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/card_fragment_messaging_textMessage_answer_text_answer"
                    />
                <ImageView
                    android:id="@+id/card_fragment_messaging_textMessage_answer_image_play_answer"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/card_fragment_messaging_textMessage_answer_text_answer"
                    android:visibility="invisible"
                    />

        </RelativeLayout>

        <TextView
            android:id="@+id/card_fragment_messaging_textMessage_answer_text_answerDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/black"
            android:padding="8dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="8dp"
            android:textSize="8sp"
            android:layout_below="@+id/relativeAnswer"
            />

</RelativeLayout>
</RelativeLayout>