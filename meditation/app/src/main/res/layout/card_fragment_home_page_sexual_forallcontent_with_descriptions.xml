<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_gravity="center"
    android:layout_margin="4dp"
    >

    <RelativeLayout
        android:id="@+id/fragment_home_page_sexualHealth_allcontent_square_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/fragment_home_page_sexualHealth_page2_square_imageBack"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            />

        <RelativeLayout
            android:id="@+id/fragment_home_page_sexualHealth_page2_square_relative"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/fragment_home_page_sexualHealth_page2_square_imageBack"
            android:paddingLeft="4dp"
            >

            <ImageView
                android:id="@+id/fragment_home_page_sexualHealth_allcontent_imagevideotype"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:tint="@color/blue"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                />

            <TextView
                android:id="@+id/fragment_home_page_sexualHealth_recycler_square_txtDateDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21"
                android:textColor="@color/gray_500"
                android:textSize="10sp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/fragment_home_page_sexualHealth_allcontent_imagevideotype"
                />
            <TextView
                android:id="@+id/fragment_home_page_sexualHealth_recycler_square_txtDateMounth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اردیبهشت"
                android:textColor="@color/gray_500"
                android:layout_marginRight="2dp"
                android:textSize="10sp"
                android:layout_toLeftOf="@+id/fragment_home_page_sexualHealth_recycler_square_txtDateDay"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                />
            <TextView
                android:id="@+id/fragment_home_page_sexualHealth_recycler_square_txtDateYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1395"
                android:textColor="@color/gray_500"
                android:layout_marginRight="2dp"
                android:textSize="10sp"
                android:layout_toLeftOf="@+id/fragment_home_page_sexualHealth_recycler_square_txtDateMounth"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                />

                <ImageView
                    android:id="@+id/fragment_home_page_sexualHealth_recycler_conent_LikeIcon"
                    android:layout_width="10dp"
                    android:layout_height="15dp"
                    android:src="@drawable/liked"
                    android:tint="@color/red"
                    android:layout_centerVertical="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"
                    android:layout_toRightOf="@+id/fragment_home_page_sexualHealth_recycler_conent_textLikeCount"
                    />
                <TextView
                    android:id="@+id/fragment_home_page_sexualHealth_recycler_conent_textLikeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="356"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/fragment_home_page_sexualHealth_recycler_conent_viewIcon"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:paddingTop="5dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textColor="@color/gray_500"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"
                    />

                <ImageView
                    android:id="@+id/fragment_home_page_sexualHealth_recycler_conent_viewIcon"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/view"
                    android:tint="@color/gray_500"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/fragment_home_page_sexualHealth_recycler_conent_textViewCount"
                    android:layout_marginRight="8dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"
                    />
                <TextView
                    android:id="@+id/fragment_home_page_sexualHealth_recycler_conent_textViewCount"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="419"
                    android:layout_marginRight="2dp"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:paddingTop="5dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textColor="@color/gray_500"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"
                    />


            <TextView
                android:id="@+id/fragment_home_page_sexualHealth_page2_square_txtText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="right"
                android:text="از هر فرصتی برای به آغوش کشیدن یکدیگر استفاده  کنید"
                android:lineSpacingExtra="5dp"
                android:layout_alignParentStart="true"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/black"
                android:padding="8dp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                />
            <TextView
                android:id="@+id/fragment_home_page_sexualHealth_page2_square_txtDescription"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:textSize="12sp"
                android:gravity="right"
                android:text="از هر فرصتی برای به آغوش کشیدن یکدیگر استفاده  کنید"
                android:lineSpacingExtra="5dp"
                android:layout_alignParentStart="true"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_below="@+id/fragment_home_page_sexualHealth_page2_square_txtText"
                android:layout_marginTop="8dp"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_200"
            android:layout_alignParentBottom="true"
            />


    </RelativeLayout>


</android.support.v7.widget.CardView>